	journal = {Geomicrobiology Journal},
	author = {Stom, Devard I. and Topchy, Ivan A. and Zhdanova, Galina O. and Barkhutova, Darima D. and Zaitseva, Svetlana V. and Kupchinsky, Aleksandr B. and Ponamoreva, Olga N. and Alferov, Sergej V. and Tolstoy, Mihail Yu. and Chesnokova, Aleksandra N. and Bulaev, Aleksandr G.},
	month = apr,
