	number = {4},
	urldate = {2022-04-27},
	journal = {International Microbiology},
	author = {Cohen, Yehuda},
	month = dec,
	year = {2002},
	keywords = {Bioremediation Oil spill Microbial mats Cyanobacteria},
	pages = {189--193},
}

