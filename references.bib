	note = {Publisher: Taylor \& Francis
\_eprint: https://doi.org/10.1080/01490451.2022.2054030},
	keywords = {microbial diversity, microbial mats, Baikal Rift Zone, biofuel cell (BFC), hydrothermal vents, Kucheger},
