	author = {Wolfe-Simon, Felisa and Davies, Paul C. W. and Anbar, Ariel D.},
	month = apr,
	year = {2009},
	note = {Publisher: Cambridge University Press},
	keywords = {Arsenic, origins of life, phosphate, shadow biosphere, weird life},
	pages = {69--74},
}

